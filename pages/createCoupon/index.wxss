    background: #F5F5F5;
}

/* 头部20px */
.addCoupon-top10{
    margin-top: 29rpx;
    width: 100%;
    background: white;
    align-items: center;
    justify-content: center;
}


/* 具体展示的行 */
.addCoupon-detailView{
    display: flex;
    width: 100%;
    height: 100rpx;
    border-bottom: 1px solid  #F5F5F5;
    flex-direction: row;
    align-items: center;
    position: relative;
}

/* 图片显示 */
.addCoupon-image{
    width: 40rpx;
    height: 40rpx;
    position:absolute;
    left:20rpx;

}

/* 标题设置 */
