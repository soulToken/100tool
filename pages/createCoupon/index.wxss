    padding-left: 100rpx;
    height: 100rpx;
    font-size: 32rpx;
    display: flex;
    align-items: center;
}

.addCoupon-input {
    width: 420rpx;
    position:absolute;
    right: 35rpx;
    height: 100rpx;
    font-size:28rpx;
    text-align:right;    
}


