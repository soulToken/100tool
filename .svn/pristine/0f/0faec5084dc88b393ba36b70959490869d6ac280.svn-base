/* 头部设置 */
.login-headerImage {
  width: 100%;
  height: 353rpx;
  display: flex;
  align-items: center;
  justify-content: center;

}

.login-title {
  color: white;
  font-size: 44rpx;
  text-align: center;
  top: 143rpx;
  width: 100%;
  position: absolute;
}


.login-view {
  background: #F7F7F7;
  position: absolute;
  left: 26rpx;
  right: 26rpx;
  top: 276rpx;
  bottom: 0rpx;
  border-radius: 30rpx;
  box-shadow: 0 0 16px 0 rgba(0, 0, 0, 0.20);

}

/* 搜索view */
.login-inputView {
  display: flex;
  flex-direction: row;
  background: #F7F7F7;
  width: 100%;
  align-items: center;
  border-radius: 20rpx;

}

/* 输入元素 */
.login-inputItem {
  display: flex;
  width: 100%;
  background: white;
  flex-direction: row;
  margin-right: 28rpx;
  margin-left: 28rpx;
  height: 104rpx;
  border-radius: 20rpx;
}

/* 输入框图片 */
.login-inputItem image {
  height: 52rpx;
  width: 35rpx;
  align-self: center;
  margin-left: 37rpx;
  margin-right: 20rpx;
}

/* 输入框 */
.login-inputItem input {
  flex: 1;
  font-size: 28rpx;
  height: 104rpx;
  display: flex;
  align-items: center;

}

.login-codeBtn {

  font-size: 28rpx;
  color: #0080FF;
  text-align: right;  
  height: 40rpx;
  margin-right: 20rpx;
  margin-top: 32rpx;
  display: flex;
  align-items:center;
  justify-content: center;
  border-bottom: 1px #0080FF solid;
}

.login-loginBtn{

  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 50rpx;
  background: #1A79FF ;
  color: white;
  border-radius: 20rpx;
  font-size: 38rpx;
}

.login-switchBtn {

  font-size: 28rpx;
  color: #0080FF;
  text-align: right;  
  height: 40rpx;
  margin-left: 40rpx;
  margin-top: 32rpx;
  display: flex;
  width: 200rpx;
}



.mine-fatherView {
  width: 100%;
  height: 310rpx;
  display: flex;

  justify-content: center;
}

.mine-fatherView2 {
  padding-top: 110rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.mine-title {
  
  color: white;
  font-size: 46rpx;
  text-align: right;
}


.mine-chainLogo {

  background: yellow;
  font-size: 18rpx;
  width: 90rpx;
  border-radius: 20rpx;
  color: black;
  text-align: center;
  font-style:bold;
}

