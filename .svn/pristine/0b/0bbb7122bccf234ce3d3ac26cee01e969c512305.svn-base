.colleague-image {
  width: 412rpx;
  height: 276rpx;
  display: block;
  margin-top: 238rpx;
  margin-left: 170rpx;
}

.colleague-text {
  display: block;
  font-size: 36rpx;
  color: #000;
  text-align: center;
  margin-top: 30rpx;
}



.colleague-detailView {
  margin-bottom: 30rpx;
}

.colleague-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 50rpx;
}

.colleague-title {
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #000;
  white-space: normal;
  word-break: break-all;
}

.colleague-contente {
  margin-top: 5px;
  font-size: 24rpx;
  color: #7f7f7f;
  white-space: normal;
  word-break: break-all;
}

.colleague-detailItem {
  background-color: #fff;
  margin-bottom: 5px;
  box-sizing: border-box;
  display: flex;
  background: #fff;
  box-shadow: 0 0 16px 0 rgba(0, 0, 0, 0.20);
  margin-top: 38rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  height: 253rpx;
  position: relative;
}


.colleague-phone {
  border-radius: 31rpx;
  background: #0080ff;
  margin-top: 50rpx;
  font-size: 24rpx;
  color: white;
  text-align: center;
  width:273rpx;
  height:40rpx;
}

.colleague-img {
  width: 200rpx;
  height: 253rpx;
}
